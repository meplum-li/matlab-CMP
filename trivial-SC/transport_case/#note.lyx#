\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\frac{\partial F_{3}}{\partial\mu_{s}} & = & -\frac{U}{2\pi\mathbf{i}}\int_{-\infty}^{+\infty}\frac{\partial G_{41}^{<}(\omega)}{\partial\mu_{s}}\mathrm{d\omega}\\
 & = & -\frac{U}{2\pi\mathbf{i}}\int_{-\infty}^{+\infty}\frac{\partial}{\partial\mu_{s}}\left(G^{R}\Sigma^{<}G^{A}\right)_{41}\mathrm{d\omega}\\
 & = & -\frac{U}{2\pi\mathbf{i}}\int_{-\infty}^{+\infty}\left[\left(\frac{\partial}{\partial\mu_{s}}G^{R}\right)\Sigma^{<}G^{A}\right]_{41}\mathrm{d\omega}-\frac{U}{2\pi\mathbf{i}}\int_{-\infty}^{+\infty}\left[\left(\frac{\partial}{\partial\mu_{s}}G^{R}\right)\Sigma^{<}G^{A}\right]_{41}\mathrm{d\omega}
\end{eqnarray*}

